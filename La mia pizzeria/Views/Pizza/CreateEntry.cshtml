@model PizzaCategories

<div class="container rounded bg-dark text-light mt-5 pb-2">
    <div class="row">
        <div class="col-12">
            <div class="d-flex align-items-center">
                <h1 class="mt-3 mb-3">Nuova Pizza</h1>
            </div>
            <form action="@Url.Action("Create","Pizza")" method="post">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <strong>Nome</strong>
                    <input asp-for="Pizza.Name" class="d-block w-100"/>
                    <span asp-validation-for="Pizza.Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <strong>Descrizione</strong>
                    <input asp-for="Pizza.Descrizione" class="d-block w-100"/>
                    <span asp-validation-for="Pizza.Descrizione" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <strong>Immagine</strong>
                    <input asp-for="Pizza.Image" class="d-block w-100"/>
                    <span asp-validation-for="Pizza.Image" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <strong>Prezzo</strong>
                    <input asp-for="Pizza.Prezzo" class="d-block w-100"/>
                    <span asp-validation-for="Pizza.Prezzo" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <strong>Categoria:</strong>
                    <select asp-for="Pizza.CategoryId" class="form-select">
                        <option selected>Seleziona una categoria</option>
                        @foreach(Category category in Model.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                </div>
                <div>
                    <input type="submit" class="btn btn-small btn-success mb-3" value="Salva" />
                </div>
            </form>
        </div>
    </div>
</div>