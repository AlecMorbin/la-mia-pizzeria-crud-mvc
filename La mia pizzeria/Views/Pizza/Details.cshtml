@model Pizza

<div class="container rounded mt-5 bg-dark text-light ">
    <div class="row">
        <div class="col-md-6">
            <div class="d-flex align-items-center">
                <h1 class="mb-3 mt-3">Dettagli Pizza</h1>
            </div>
            <div class="">
                <img class="rounded float-start img-fluid" src=@Model.Image alt=@Model.Image/>
            </div>
            <div>
                <p>
                    <strong>Nome</strong>
                    @Model.Name
                </p>
                <p>
                    <strong>Descrizione</strong>
                    @Model.Descrizione
                </p>
                <p>
                    <strong>Prezzo</strong>
                    @Model.Prezzo &euro;
                </p>
                <p>
                    <strong>Categoria</strong>
                    @if (Model.Category != null)
                    {
                        @Model.Category.Name
                    }else{
                        <span>Nessuna categoria associata</span>
                    }
                </p>
            </div>
        </div>
    </div>
</div>