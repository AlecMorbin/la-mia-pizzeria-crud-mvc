<div class="container">
    <div class="row"> 
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="mt-3 mb-3 text-light">Lista pizza</h1>
            </div>
        </div>
    </div>
    <div class="row js_wait_pizza text-center">

    </div>
    <div class="row js_no_pizza text-center d-none">

    </div>
    <div class="row js_pizza_cards d-none">
        <!-- lista delle card delle pizze -->
    </div>
</div>

@section Scripts{

    <script type="text/javascript">
    
        loadPizzas();

        function loadPizzas() {
            axios.get('/api/pizza/get').then((result) => {
                console.log("Dati ricevuti OK");
                console.log(result);
                if (result.data.lenght == 0) {
                    console.log("Data is empty");
                    document.querySelector('.js_wait_pizza').classList.add('d-none');
                    document.querySelector('.js_no_pizza').classList.remove('d-none');
                } else {
                    console.log("Data is not empty");
                    document.querySelector('.js_wait_pizza').classList.add('d-none');
                    document.querySelector('.js_pizza_cards').classList.remove('d-none');

                    result.data.forEach(pizza => {
                        console.log("Posting pizzas");
                        document.querySelector('.js_pizza_cards').innerHTML +=
                            `
                            <div class="col-sm-3 mb-3">
                              <div class="card bg-dark text-light" style="width: 18rem;">
                                <img src=${pizza.image} class="card-img" alt="Immagine di una pizza ">
                                <div class="card-body">
                                  <h5 class="card-title">${pizza.name}</h5><span class="text-end">${pizza.prezzo} &euro;</span>
                                  <p class="card-text">${pizza.descrizione}</p>
                                </div>
                              </div>
                            </div>
                            `
                    });
                }
            }

            ).catch((error) => {console.log("Errore: " + error)});
        }
    
    </script>
}